<%= form_for @book do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :category %>
  <%= f.text_field :category %>
  <%= f.label :finished %>
  <%= f.check_box :finished %>

  <br>

  <%= f.submit %>
<% end %>
