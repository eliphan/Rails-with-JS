
<%= @book.title %>
<p> by <%= @book.author %></p>
<%= display_edit(@book) %>
<%= display_create_chapter(@book) %>
<br><br>
<%= @book.description %>
<br><br>
<%= link_to "Read all chapters", book_chapters_path(@book) %>

<ol><% @book.chapters.each do |chapter| %>
    <li><%= link_to chapter.chapter_title, book_chapter_path(@book,chapter) %></li>
<% end %>
</ol>

Reviews:
<ul>
  <% @book.reviews.each do |review| %>
    <li><%= review.user_username %></li>
    <li><%= review.content %></li>
  <% end %>
  </ul>
  <p>

<%= form_for @review do |f| %>
    <%= f.hidden_field :book_id %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.label 'Name:' %>
    <%= f.text_field :user_username %>
    <%= f.label 'Review:' %>
    <%= f.text_area :content %>

<%= f.submit %>
<% end %>  
