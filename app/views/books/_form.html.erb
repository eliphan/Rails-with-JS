<%= form_for @book do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :category %>
  <%= f.collection_select :category_id, Category.all, :id, :name %>
  <%= f.fields_for :category, @book.build_category do |categories_fields| %>
    <%= categories_fields.text_field :name %>
    <% end %>
  <%= f.label :finished %>
  <%= f.check_box :finished %>

  <br>

  <%= f.submit %>
<% end %>
